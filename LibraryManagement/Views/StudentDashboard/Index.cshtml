
@model IEnumerable<LibraryManagement.Models.Database.BorrowedBook>

@{
    ViewBag.Title = "Student Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><center>Welcome Student </center></h2>


<div id="viewport">

    <center> <img src="~/Image/dashh.jpg" height="250px" width="500px" /></center>

</div>
<div id="content"></div>
@if (Model.Any())
{
    <table class="table table-striped table-bordered dataTable" target=".target-load" border="1" align="center">
        <thead>
            <tr>
                <th>Book Name</th>
                <th>Borrowed Date</th>
                <th>Return Date</th>
                <th>Penalty</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Book.Name</td>
                <td>@item.BorrowDate</td>
                <td>@item.ReturnDate</td>
                <td>@item.PenaltyAmount</td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3>Not Found Any Data</h3>
}