@model IEnumerable<LibraryManagement.Models.Database.Book>

<table class="table table-striped table-bordered dataTable" target=".target-load" border="1" align="center">
    <thead>
        <tr>
            <th>Name</th>
            <th>Information</th>
            <th>Author</th>
            <th>Quantity</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="gradeX">
                <td>@item.Name</td>
                <td>@item.Information</td>
                <td>
                    @if (item.Author != null)
                    {
                        @item.Author.Name
                    }
                    else
                    {
                        @item.AuthorName
                    }
                </td>
                <td>@item.Quantity</td>
                <td>@(item.Quantity <= 0 ? "Out of Stock" : "In Stock")</td>
                <td>
                    <a class="btn btn-success btn-circle" href="@Url.Content("~/admin/Book/edit/" + item.Id)">
                        Edit

                    </a>
                    <a class="btn btn-danger btn-circle btn-delete" href="@Url.Content("~/admin/Book/delete/"+item.Id)">
                        Delete

                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>



